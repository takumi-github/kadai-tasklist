<p>ログイン完了ユーザ: <%= current_user.name %></p>
<h1>タスク一覧</h1>

<% if @tasks.any? %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">ステータス</th>
      <th scope="col">タスク</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.status %></td>
      <td><%= task.content %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div>
<%= paginate @tasks %>
</div>
<% end %>

<%= link_to "新規タスクの投稿" , new_task_path, class: "btn btn-primary" %>
